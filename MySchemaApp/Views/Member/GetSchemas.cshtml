@using MySchemaApp.Models.Entities;
@model List<Schema>;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<p class="badge badge-primary"></p>

<div class="card" style="width: 18rem;">

    <div class="card-body">
        <h5 class="card-title">@TempData["userName"]</h5>
        <p class="card-text">Eklediğiniz Şemaları Görüntülüyorsunuz</p>
    </div>

    <div class="card-body">
        <a type="button" class="btn btn-success" href=@Url.Action("HangiSchema","Member")>Yeni Şema Ekle</a>
        <a href=@Url.Action("LogOut","Member") class="btn btn-danger">Hesaptan Çıkış Yap</a>
    </div>
</div>




@if (TempData["islem"] != null)
{
<div class="alert alert-success" role="alert">
    @TempData["islem"]
</div>
}
else
{

}

<table class="table table-striped">
    <thead>
        <tr>


            <th scope="col">Şema Türü</th>
            <th scope="col">Şema İsmi</th>
            <th scope="col">Güncelle</th>
            <th scope="col">Sil</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in @Model)
        {
        <tr>


            <td>@item.SchemaName</td>
            <td>@item.MySchemaName</td>
            <td><a href=@Url.Action("Edit","Member" ,new { id=  item.Id }) class="btn btn-primary">Güncelle</a></td>
            <td><a href=@Url.Action("Sil","Member" ,new { id=  item.Id }) class="btn btn-danger">Sil</a></td>




        </tr>
        }


    </tbody>
</table>
@if(Model.Count==0){

<span class="border border-primary"><a href=@Url.Action("HangiSchema","Member")>Herhangi bir kaydınız bulunmamaktadır eklemek için tıklayınız.</a></span>
 }
else{
}
